// Simple Express server for ChatBot API
// yarn add express cors dotenv openai

const express = require('express');
const cors = require('cors');
require('dotenv').config();

const app = express();
app.use(cors());
app.use(express.json());

// Import OpenAI (vocÃª precisa: npm install openai)
let openai;
try {
  const { OpenAI } = require('openai');
  openai = new OpenAI({
    apiKey: process.env.OPENAI_API_KEY,
  });
} catch (error) {
  console.error('OpenAI not installed. Run: npm install openai');
  process.exit(1);
}

// POST /api/chat
app.post('/api/chat', async (req, res) => {
  try {
    const { messages } = req.body;

    if (!messages || messages.length === 0) {
      return res.status(400).json({
        success: false,
        error: 'No messages provided',
      });
    }

    if (!process.env.OPENAI_API_KEY) {
      return res.status(500).json({
        success: false,
        error: 'OpenAI API key not configured',
      });
    }

    // System prompt for beauty consultant
    const systemPrompt = `You are Tatiana's AI beauty consultant. You help with:
- Beauty treatment information (Botox, Fillers, Laser, Micropigmentation, etc.)
- Appointment scheduling questions
- Beauty and skincare tips
- Pricing information

Be professional, friendly, and concise. Respond in English or Portuguese as needed.
Keep responses under 3 sentences unless more detail is requested.`;

    const response = await openai.chat.completions.create({
      model: 'gpt-3.5-turbo',
      messages: [
        { role: 'system', content: systemPrompt },
        ...messages,
      ],
      temperature: 0.7,
      max_tokens: 500,
    });

    const assistantMessage =
      response.choices[0]?.message?.content || 'Unable to generate response';

    return res.json({
      success: true,
      message: assistantMessage,
    });
  } catch (error) {
    console.error('Chat API error:', error.message);
    return res.status(500).json({
      success: false,
      error: error.message || 'Unknown error',
    });
  }
});

// GET /health
app.get('/health', (req, res) => {
  res.json({ ok: true, timestamp: new Date });
});

const PORT = process.env.PORT || 3001;
app.listen(PORT, () => {
